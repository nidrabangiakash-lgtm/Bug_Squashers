{
  "name": "Notification",
  "type": "object",
  "properties": {
    "route_number": {
      "type": "string",
      "description": "Route number affected"
    },
    "type": {
      "type": "string",
      "enum": [
        "delay",
        "cancelled",
        "passenger_count",
        "route_change",
        "info"
      ],
      "description": "Type of notification"
    },
    "title": {
      "type": "string",
      "description": "Notification title"
    },
    "message": {
      "type": "string",
      "description": "Notification message"
    },
    "severity": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ],
      "description": "Severity level"
    },
    "is_read": {
      "type": "boolean",
      "default": false,
      "description": "Whether notification has been read"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the notification was created"
    }
  },
  "required": [
    "route_number",
    "type",
    "title",
    "message"
  ]
}
{
  "name": "BusRoute",
  "type": "object",
  "properties": {
    "route_number": {
      "type": "string",
      "description": "Route identifier (e.g., 101, 222V)"
    },
    "route_name": {
      "type": "string",
      "description": "Full route name"
    },
    "start_point": {
      "type": "string",
      "description": "Starting location"
    },
    "end_point": {
      "type": "string",
      "description": "Ending location"
    },
    "stops": {
      "type": "array",
      "description": "List of stops along the route",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "lat": {
            "type": "number"
          },
          "lng": {
            "type": "number"
          },
          "arrival_time": {
            "type": "string"
          }
        }
      }
    },
    "route_path": {
      "type": "array",
      "description": "Coordinates for the route line on map",
      "items": {
        "type": "object",
        "properties": {
          "lat": {
            "type": "number"
          },
          "lng": {
            "type": "number"
          }
        }
      }
    },
    "frequency": {
      "type": "string",
      "description": "How often buses run (e.g., 'Every 15 mins')"
    },
    "first_bus": {
      "type": "string",
      "description": "First bus time"
    },
    "last_bus": {
      "type": "string",
      "description": "Last bus time"
    },
    "fare": {
      "type": "string",
      "description": "Ticket fare"
    },
    "active_buses": {
      "type": "number",
      "description": "Number of buses currently active on this route"
    },
    "color": {
      "type": "string",
      "description": "Color code for this route on map"
    }
  },
  "required": [
    "route_number",
    "route_name",
    "start_point",
    "end_point"
  ]
}